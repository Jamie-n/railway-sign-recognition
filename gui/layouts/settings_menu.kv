<SettingsMenuContent>
    id: SETTINGS_POPUP
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "450"


    MDTextField:
        id: CAPTURE_HEIGHT
        hint_text: "Capture Height (px)"
        input_filter: 'int'

    MDTextField:
        id: CAPTURE_WIDTH
        hint_text: "Capture Width (px)"
        input_filter: 'int'

    MDTextField:
        id: CAPTURE_DEVICE
        hint_text: "Capture Device"
        on_focus: if self.focus: root.capture_device_menu.open()
        readonly: True

    MDRaisedButton:
        text: "Preview Capture"
        size: root.width, 30
        on_release: root.preview_capture()

    MDTextField:
        id: DLL_PATH
        hint_text: "DLL Path"

    MDGridLayout:
        cols: 2
        MDLabel:
            text: "Debug Mode"
        MDSwitch:
            id: IS_DEBUG

<PasswordDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "100"
    width: "200"
    orientation: "vertical"

    MDAnchorLayout:
        MDGridLayout:
            rows:1
            MDTextField:
                id: PASSWORD
                hint_text: "Passcode"
                helper_text: "Invalid Passcode"
                helper_text_mode: "on_error"
                password: True

<CapturePreview>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "320"
    width: "450"
    orientation: "vertical"

    MDAnchorLayout:
        MDGridLayout:
            rows:2

            Image:
                id: preview_image
                size: root.width, root.height


