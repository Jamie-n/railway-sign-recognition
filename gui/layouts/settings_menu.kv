<SettingsMenuContent>
    id: SETTINGS_POPUP
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "450"


    MDTextField:
        id: CAPTURE_HEIGHT
        hint_text: "Capture Height (px)"

    MDTextField:
        id: CAPTURE_WIDTH
        hint_text: "Capture Width (px)"

    MDTextField:
        id: CAPTURE_DEVICE
        hint_text: "Capture Device"

    MDRaisedButton:
        text: "Preview Capture"
        size: root.width, 30
        on_release: root.preview_capture()


    MDTextField:
        id: DLL_PATH
        hint_text: "DLL Path"
        disabled: True
    MDRaisedButton:
        text: "Browse"
        size: root.width, 30
        on_release: root.preview_capture()

    MDGridLayout:
        cols: 2
        MDLabel:
            text: "Debug Mode"
        MDSwitch:
            id: IS_DEBUG


<CapturePreview>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "320"
    width: "450"
    orientation: "vertical"

    MDAnchorLayout:
        MDGridLayout:
            rows:2

            Image:
                id: preview_image
                size: root.width, root.height
